<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备信息部分："
                    ></TextView>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deviceAddress_tv"
                    ></TextView>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">





                    <RadioGroup
                        android:id="@+id/hzSelect_rg"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/hzSelect_rb1"
                            android:text="25HZ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></RadioButton>


                        <RadioButton
                            android:id="@+id/hzSelect_rb2"
                            android:layout_marginLeft="15dp"
                            android:text="50HZ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></RadioButton>


                        <RadioButton
                            android:id="@+id/hzSelect_rb3"
                            android:layout_marginLeft="15dp"
                            android:text="100HZ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></RadioButton>

                    </RadioGroup>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置频率"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/setHz_btn"
                        ></Button>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/deviceName_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备型号："></TextView>
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:id="@+id/batteryNum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电量："></TextView>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:id="@+id/batteryState_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充电中"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/firmwareVersion_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="固件版本："></TextView>

                    <TextView
                        android:id="@+id/calculationVersion_tv"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="算法版本："
                        ></TextView>
                </LinearLayout>




                <ScrollView
                    android:visibility="gone"
                    android:id="@+id/log_sv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="vertical"
                    android:fadingEdge="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_log"
                        />
                </ScrollView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示服务列表"
                    android:id="@+id/showService_tv"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    ></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示日志打印"
                    android:id="@+id/showLog_tv"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    ></Button>

            </LinearLayout>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

